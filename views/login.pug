script.
    $(document).ready(function() {
        $("#login-span").click(function () {
            $("div#login-modal").css("display", "none");
        });
        $("#register").click(function () {
            $.ajax({
                url: "/cisum/join",
                type: "GET",
                success: function (result) {
                    $("div#login-modal").html(result);
                },
                error: function (error) {
                    alert("서버 통신 오류 :(");
                },
            });
        });
        $("#login").click(function() {
            $.ajax({
                url : "/cisum/login",
                type : "GET",
                success : function(result) {
                    $("div#login-modal").html(result);     
